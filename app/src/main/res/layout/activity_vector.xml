<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/trim_imageview"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginEnd="157dp"
        android:layout_marginLeft="127dp"
        android:layout_marginRight="157dp"
        android:layout_marginStart="127dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.19"
        app:srcCompat="@drawable/avd_square"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintTop_creator="1" />

    <ImageView
        android:id="@+id/morph_imageview"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginBottom="175dp"
        android:layout_marginTop="110dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@+id/trim_imageview"
        app:layout_constraintRight_toRightOf="@+id/trim_imageview"
        app:layout_constraintTop_toBottomOf="@+id/trim_imageview"
        app:srcCompat="@drawable/avd_morph_plus_play" />


</android.support.constraint.ConstraintLayout>